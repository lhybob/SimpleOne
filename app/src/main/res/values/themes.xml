<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- 基础应用主题 -->
    <style name="Theme.SimpleOne" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- 主品牌颜色 -->
        <item name="colorPrimary">@color/teal_200</item> <!-- 应用的主颜色，通常用于工具栏、按钮等 -->
        <item name="colorPrimaryVariant">@color/teal_200</item> <!-- 主颜色的变体，通常用于区分主颜色的不同状态 -->
        <item name="colorOnPrimary">@color/white</item> <!-- 在主颜色背景上显示的文本颜色 -->

        <!-- 次品牌颜色 -->
        <item name="colorSecondary">@color/teal_200</item> <!-- 应用的次要颜色，通常用于强调某些UI元素 -->
        <item name="colorSecondaryVariant">@color/teal_700</item> <!-- 次要颜色的变体，通常用于区分次要颜色的不同状态 -->
        <item name="colorOnSecondary">@color/gray</item> <!-- 在次要颜色背景上显示的文本颜色 -->

        <!-- 状态栏颜色 -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>  <!--设置状态栏颜色为主颜色的变体 -->

        <!-- 你可以继续添加其他自定义属性，例如字体、形状、动画等 -->
        <item name="android:windowBackground">@color/white</item> <!-- 设置应用的背景 -->
        <item name="android:windowContentOverlay">@null</item> <!-- 取消系统默认的背景 -->
        <item name="android:windowIsTranslucent">true</item> <!-- 使背景半透明 -->
        <item name="android:windowNoTitle">true</item> <!-- 隐藏标题栏 -->

        <!-- 在此自定义你的主题 -->
    </style>



    <!-- 自定义 Button 样式，继承自 Widget.MaterialComponents.Button -->
    <style name="Button_style_01" parent="Widget.MaterialComponents.Button">
        <!-- 设置按钮左边内边距为 16dp -->
        <item name="android:paddingLeft">1dp</item>
        <!-- 设置按钮右边内边距为 16dp -->
        <item name="android:paddingRight">1dp</item>
        <!-- 设置按钮顶部内边距为 8dp -->
        <item name="android:paddingTop">1dp</item>
        <!-- 设置按钮底部内边距为 8dp -->
        <item name="android:paddingBottom">1dp</item>

        <!-- 设置文本对齐方式为居中 -->
        <item name="android:gravity">center</item>
        <!-- 设置按钮文本颜色为白色 -->
        <item name="android:textColor">@color/white</item>
        <!-- 设置按钮文本大小为 16sp -->
        <item name="android:textSize">26sp</item>




    </style>


</resources>
